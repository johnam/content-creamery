<div class='mdl-grid'>
  <div class='mdl-cell mdl-cell--12-col'>

    <div class='mdl-card devise-form'>
      <div class='mdl-card__title'>
        <div class='mdl-card__title-text'>
          Sign in
        </div>
        <div class='mdl-layout-spacer'></div>
        <div class='mdl-card__subtitle-text devise-form-sign-in__register-link'>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "or Register", new_registration_path(resource_name) %>
          <% end -%>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='mdl-card__supporting-text'>
          <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
            <%= f.label :email, class: 'mdl-textfield__label'%>
            <%= f.email_field :email, email_field_options %>
          </div>

          <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
            <%= f.label :password, class: 'mdl-textfield__label' %>
            <%= f.password_field :password, class: 'mdl-textfield__input',
                                            autocomplete: 'off',
                                            data: { required: true }  %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <%= f.label :remember_me, class: 'mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect' do %>
              <%= f.check_box :remember_me, class: 'mdl-checkbox__input' %>
              <span class="mdl-checkbox__label">Remember me</span>
            <% end %>
          <% end -%>
        </div>

        <div class='mdl-card__actions'>
          <%= f.button 'SIGN IN', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect' %>

          <span class='tos-notice'>
            By signing in, you agree to the <%= link_to 'user agreement', privacy_and_terms_path, target: '_blank' %>.
          </span>
        </div>
      <% end %>

      <%= devise_users_shared_links %>
    </div>

  </div>
</div>
